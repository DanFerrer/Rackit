<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Attractions Around You</h1>
  </div>
</div>
<% @spots.each do |spot| %>
  <% present spot do |spot_presenter| %>
    <div class="row">
      <div class="col-md-7">
        <%= spot_presenter.image_url %>
      </div>
      <div class="col-md-5">
        <h3><%= spot_presenter.name %></h3>
        <strong><%= spot_presenter.attraction_types %></strong>
        <strong><%= spot_presenter.attraction_status %></strong>
        <strong><%= spot_presenter.attraction_price %></strong>
        Rating: <%= spot_presenter.attraction_rating %>
      </div>
    </div>
  <hr>
  <% end %>
<% end %>
