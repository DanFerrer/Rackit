<div class="row">

 <div class="col-md-4">
   <h1 class="page-header"><%= @user.name %></h1>
   <%= image_tag @user.image_url, class: "img-circle img-responsive" %><br>
   <p><%= @user.email %></p><br>
   <p><%= @user.location %></p><br>
   <p><%= @user.bio%></p><br>
   Current Location: <strong><%= @user.current_location %></strong>
 </div>
 <% if current_user == @user %>
   <div class="col-md-8">
     <div id="map" style='width: 100%; height: 40em;'></div>
   </div>
 <% end %>
  <div class="col-md-12">
    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th>Location</th>
          <th>Racks</th>
          <th>Borough</th>
          <th>Latitude</th>
          <th>Longitude</th>
        </tr>
      </thead>
      <tbody>
        <% @corrals_to_view.each do |corral| %>
          <tr>
            <td><%= corral.location %></td>
            <%= rack_colors(corral) %>
            <td><%= corral.borough.name %></td>
            <td><%= corral.latitude %></td>
            <td><%= corral.longitude %></td>
            <% if corral.location != current_user.location %>
            <td><%= link_to "Checkin!", corral_checkins_path(corral.id) %></td>
            <% else %>
            <td><%= link_to "Checkout", corral_checkouts_path(corral.id) %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @corrals_to_view, previous_label: h("<"), next_label: h(">") %>
  </div>

